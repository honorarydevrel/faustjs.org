		"strip-markdown": "^6.0.0",
		"unified": "^11.0.5",
		"unist-util-visit": "^5.0.0",
		"vfile-matter": "^5.0.0"
	},
	"devDependencies": {
		"@tailwindcss/postcss": "^4.0.7",
		"@tailwindcss/typography": "^0.5.15",
		"concurrently": "^9.1.2",
		"eslint": "^9.20.1",
