{
	"name": "faustjs-org-site",
	"private": true,
	"scripts": {
		"predev": "faust generatePossibleTypes",
		"dev": "faust dev",
		"prebuild": "faust generatePossibleTypes",
		"build": "faust build",
		"postbuild": "concurrently \"pnpm build:sitemap\" \"pnpm build:search\"",
		"generate": "faust generatePossibleTypes",
		"stylesheet": "faust generateGlobalStylesheet",
		"start": "faust start",
		"test:format": "prettier . --check",
		"test:lint": "eslint --quiet",
		"test:search": "NODE_ENV=test node --env-file=.env.local ./scripts/smart-search.mjs",
		"build:search": "node --env-file-if-exists=.env.local ./scripts/smart-search.mjs",
		"build:sitemap": "next-sitemap --config next-sitemap.config.mjs",
		"lint": "eslint --fix",
		"format": "prettier . --write",
		"prepare": "husky"
	},
	"dependencies": {
		"@apollo/client": "^3.13.8",
		"@faustwp/blocks": "^6.1.2",
		"@faustwp/cli": "^3.2.3",
		"@faustwp/core": "^3.2.3",
		"@headlessui/react": "^2.2.4",
		"@heroicons/react": "^2.2.0",
		"@icons-pack/react-simple-icons": "^12.8.0",
		"@jsdevtools/rehype-url-inspector": "^2.0.2",
		"@next/third-parties": "^15.3.4",
		"@octokit/core": "^7.0.2",
		"@shikijs/transformers": "^3.4.2",
		"@sindresorhus/slugify": "^2.2.1",
		"@wpengine/atlas-next": "^3.0.0",
		"date-fns": "^4.1.0",
		"date-fns-tz": "^3.2.0",
		"downshift": "^9.0.9",
		"feed": "^5.0.1",
		"graphql": "^16.11.0",
		"http-status-codes": "^2.3.0",
		"lodash.debounce": "^4.0.8",
		"next": "^15.3.2",
		"next-mdx-remote-client": "^2.1.2",
		"next-sitemap": "^4.2.3",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"rehype-callouts": "^2.1.0",
		"rehype-external-links": "^3.0.0",
		"rehype-pretty-code": "^0.14.1",
		"rehype-slug": "^6.0.0",
		"remark-flexible-toc": "^1.1.1",
		"remark-frontmatter": "^5.0.0",
		"remark-gfm": "^4.0.1",
		"remark-parse": "^11.0.0",
		"remark-smartypants": "^3.0.2",
		"remark-stringify": "^11.0.0",
		"shiki": "^3.4.2",
		"strip-markdown": "^6.0.0",
		"unified": "^11.0.5",
		"vfile-matter": "^5.0.1"
	},
	"devDependencies": {
		"@tailwindcss/postcss": "^4.1.7",
		"@tailwindcss/typography": "^0.5.16",
		"concurrently": "^9.1.2",
		"eslint": "^9.27.0",
		"eslint-config-neon": "^0.2.7",
		"eslint-plugin-mdx": "^3.4.2",
		"eslint-plugin-unicorn": "^59.0.1",
		"husky": "^9.1.7",
		"lint-staged": "^16.0.0",
		"next-secure-headers": "^2.2.0",
		"postcss": "^8.5.3",
		"postcss-nesting": "^13.0.1",
		"prettier": "^3.5.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"tailwindcss": "^4.1.7"
	},
	"engines": {
		"node": "^22",
		"npm": "use-pnpm"
	},
	"packageManager": "pnpm@10.11.0+sha512.6540583f41cc5f628eb3d9773ecee802f4f9ef9923cc45b69890fb47991d4b092964694ec3a4f738a420c918a333062c8b925d312f42e4f0c263eb603551f977",
	"lint-staged": {
		"*": "pnpm format",
		"*.{js,jsx}": "pnpm lint"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"@tailwindcss/oxide",
			"sharp",
			"unrs-resolver"
		],
		"overrides": {
			"eslint-plugin-unicorn": "$eslint-plugin-unicorn",
			"@babel/runtime": "^7.27.0"
		},
		"patchedDependencies": {
			"eslint-config-neon": "patches/eslint-config-neon.patch"
		}
	}
}
