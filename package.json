		"http-status-codes": "^2.3.0",
		"image-size": "^2.0.0",
		"lodash.debounce": "^4.0.8",
		"next": "^15.1.7",
		"next-mdx-remote": "^5.0.0",
		"next-sitemap": "^4.2.3",
		"plaiceholder": "^3.0.0",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"recma-nextjs-static-props": "^2.0.1",
		"rehype-callouts": "^2.0.1",
