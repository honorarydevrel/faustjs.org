{
	"cSpell.words": [
		"codegen",
		"combobox",
		"Di√°taxis",
		"faustjs",
		"faustwp",
		"heroicons",
		"Kevinbatdorf",
		"lastmod",
		"recma",
		"rehype",
		"shiki",
		"shikijs",
		"sindresorhus",
		"stylesheet",
		"tailwindcss",
		"wpgraphql"
	],
	"editor.formatOnSave": true,
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": "explicit"
	},
	"eslint.run": "onSave",
	"eslint.useFlatConfig": true,
	"eslint.codeActionsOnSave.mode": "problems",
	"[javascript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[javascriptreact]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[mdx]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.wordWrap": "on"
	},
	"[json]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"cSpell.ignorePaths": [
		"package-lock.json",
		"node_modules",
		"vscode-extension",
		".git/objects",
		".vscode",
		".vscode-insiders",
		"pnpm-lock.yaml"
	]
}
